import sys                    #import required modules

def Sort(inp):                                          #for sorting a two dimensional array respect with second element 
	return(sorted(inp, key = lambda x:x[1]))


cmd=['','','','','']          #for product form out of index error 
Incomplete=[]                 #list for incomlete task with Priority.
complete=[]                   #list for completed tasks
with open("D:/text/task.txt","r") as f:  #updating Incompleted list from task.txt file
    for line in f:
        str_line=line.strip()
        pr=str_line.split()[0]
        txt=''
        for i,j in enumerate(str_line.split()):
            if i!=0:
                txt+=j+' '
        Incomplete.append([txt.strip(),pr])

with open("D:/text/completed.txt","r") as f:   #updating completed list from completed.txt file
    for line in f:
        complete.append(line.strip())

num_incomplete=[]                   #list for numeric second value
for i in Incomplete:
    num_incomplete.append([i[0],int(i[1])])


for i,j in enumerate(sys.argv):                 #all command line arugments are append to cmd
    cmd.insert(i,j)                 


if len(sys.argv)==1 or cmd[1]=="help":                   #for help or empty command
    print( 'task help\nUsage :-\ntask add 2 hello world    # Add a new item with priority 2 and text "hello world" to the list\ntask ls                   # Show incomplete priority list items sorted by priority in ascending order\ntask del INDEX            # Delete the incomplete item with the given index\ntask done INDEX           # Mark the incomplete item with the given index as complete\ntask help                 # Show usage\ntask report               # Statistics');



if cmd[1]=="ls":                    #for ls command
    for i,j in enumerate(Sort(num_incomplete)):
        a=""
        for k in j[0:-1]:
            a+=" "
            a+=k            
        print(str(i+1)+'.'+a+' ['+str(j[-1])+']');


if cmd[1]=="add" and cmd[2].isdigit() and cmd[3]!='':      #for Add process
    b=''
    for j in cmd[3:-1]:
        if j !='':
            b+=j
    Incomplete.append([b,cmd[2]])
    print('Added task:',Incomplete[-1][0], 'with priority',Incomplete[-1][1])


if cmd[1]=="del" and int(cmd[2])<=len(Incomplete):         #for Delete process
    try:
        for i,j in enumerate(Incomplete):
            if(j[0]==Sort(num_incomplete)[int(cmd[2][0])-1][0])and(str(j[1])==str(Sort(num_incomplete)[int(cmd[2][0])-1][1])):
                Incomplete.pop(i)
                print("Deleted item with index ",cmd[2])
    except:
        print("Error: item with index ",cmd[2]," does not exist. Nothing deleted.");
if cmd[1]=="done" and cmd[2]:                           #for mark as done process
    try:
        for i,j in enumerate(Incomplete):
            if(j[0]==Sort(num_incomplete)[int(cmd[2][0])-1][0])and(str(j[1])==str(Sort(num_incomplete)[int(cmd[2][0])-1][1])):
                Incomplete.pop(i)
                complete.append(j[0])
                print('Marked item as done.')
    except :
        print("Error: no incomplete item with index ",cmd[2]," exists");




if cmd[1]=="report":                                      #for report command
    print("pending : ",len(Incomplete))
    if len(Incomplete)>0:
        for i,j in enumerate(Sort(num_incomplete)):
            a=""
            for k in j[0:-1]:
                a+=" "
                a+=k            
            print(str(i+1)+'.'+a+' ['+str(j[-1])+']');
    print()
    print("completed : ",len(complete))
    if len(complete)>0:
        for i,j in enumerate(complete):
            print(str(i+1)+'.'+j);
            
with open("D:/text/task.txt",'w') as tfile:                        # updating text file
    if len(Incomplete)>0:
        for i in Incomplete:
            tfile.write(str(i[1])+' '+str(i[0]+'\n'))

with open('D:/text/completed.txt','w') as tfile:                    # updating text file
    if len(complete)>0:
        for i in complete:
            tfile.write(str(i)+'\n')
